<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View post - <%= post['title'] %> | SubmitIt</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div id="navi">
      <ul class="naviLink">
        <li><a href="/">Home</a></li>
        <li><a href="/s/<%= subforum %>">Back to Subforum</a></li>
      </ul>
    </div>

    <div class="container">
      <div class="post">
        <h1><%= post['title'] %></h1>
        <p class="mb-2"><%= post['content'] %></p>
        <p class="mb-1">Posted by <%= poster %></p>
        <p>- <%= post['posted_date'] %></p>
      </div>

      <% if (viewer === poster) { %>
        <button class="btn-danger" id="delete_button">Delete Post</button>
      <% } %>

      <% if (comments.length > 0) { %>
      <div class="comments">
        <h2>Comments</h2>
        <% comments.forEach(element => { %>
        <div class="comment <%= element['comment_id'] %>">
          <p><%= element['content'] %></p>
          <p>- <%= element['poster'] %></p>
          <% if (viewer === element['poster']) { %>
          <button class="btn-danger" id="delete_comment">Delete Comment</button>
          <% } %>
        </div>
        <% }) %>
      </div>
      <% } %>

      <div class="form-group mt-3">
        <label for="comment_field">Add a comment:</label>
        <textarea name="comment_field" id="comment_field" rows="3"></textarea>
        <button class="btn-primary" id="comment_button">Post Comment</button>
      </div>

      <button class="btn-gray" id="back_button">Go back</button>
    </div>

    <footer>
      <div>&copy; 2025 SubmitIt. All rights reserved.</div>
      <div class="footer-links">
        <a href="/impressum">Impressum</a>
        <a href="/privacy">Data Privacy</a>
      </div>
    </footer>
    <script>
      const delete_button = document.querySelector('#delete_button');
      const comment_button = document.querySelector('#comment_button');
      const comment_delete_buttons =
        document.querySelectorAll('#delete_comment');

      comment_delete_buttons.forEach((ele) => {
        ele.addEventListener('click', () => {
          fetch('/post/comment/delete_comment', {
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            method: 'POST',
            body: JSON.stringify({
              comment_creator: '<%= viewer %>',
              comment_id: ele.parentElement.classList[1],
            }),
          })
            .then((res) => res.json())
            .then(() => {
              window.location.href = window.location.href;
            });
        });
      });

      if (comment_button) {
        comment_button.addEventListener('click', () => {
          const content = document.querySelector('#comment_field').value.trim();

          if (content === '') {
            alert('Comment cannot be empty.');
            return;
          }

          fetch('/post/comment/create_comment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({
              content: content,
              post_id: '<%= post["post_id"] %>',
            }),
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.redirect) {
                window.location.href = "/login"
              } else {
                window.location.href = window.location.href;
              }
              
            });
        });
      }

      if (delete_button) {
        delete_button.addEventListener('click', () => {
          fetch('/post/delete', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({
              post_id: '<%= post["post_id"] %>',
              posted_by: '<%= poster %>',
            }),
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.redirect) {
                window.location.href =
                  '/s/' + window.location.pathname.split('/')[2];
              } else if (data.error) {
                alert(data.error);
              }
            })
            .catch((err) => {
              console.log('Delete failed:', err);
              alert('An error occurred while deleting the post.');
            });
        });
      }

      document.querySelector('#back_button').addEventListener('click', () => {
        window.location.href = '/s/' + window.location.pathname.split('/')[2];
      });
    </script>
  </body>
</html>
