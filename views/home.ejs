<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SubmitIt</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <% if (logged_in) { %>
      <nav id="navi">
        <ul class="naviLink">
          <li><a href="/profile">Profile</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </nav>
    <% } else { %>
      <nav id="navi" class="navi">
        <ul class="naviLink">
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
        </ul>
      </nav>
    <% } %>

    <div class="container">
      <h1>SubmitIt</h1>
      
      <h3>Explore Communities</h3>
      
      <div class="subforum-grid">
        <% subforumList.forEach(element => { %>
          <div class="subforum-card">
            <h5>
              <a href="/s/<%= element['name'] %>">/s/<%= element['name'] %></a>
            </h5>
          </div>
        <% }) %>
      </div>
    </div>

    <footer>
      <div>&copy; 2025 SubmitIt. All rights reserved.</div>
      <div class="footer-links">
        <a href="/impressum">Impressum</a>
        <a href="/privacy">Data Privacy</a>
      </div>
    </footer>
  </body>
</html>