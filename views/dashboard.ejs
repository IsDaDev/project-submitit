<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin-Dashboard</title>
  </head>
  <body>
    <h1>Admin-Dashboard</h1>
    <div class="users">
      <h2>Users</h2>
      <table>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Account Created</th>
          <th>Posts</th>
          <th>Rolle</th>
        </tr>

        <% users.forEach(user => { %>
        <tr>
          <div class="user">
            <td><%= user.user_id %></td>
            <td><%= user.name %></td>
            <td><%= user.acc_created %></td>
            <td><%= user.posts_count %></td>
            <td><%= user.role %></td>
          </div>
        </tr>
        <% }) %>
      </table>
    </div>

    <div class="posts">
      <h2>Posts</h2>
      <table id="post_table">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Content</th>
          <th>Date</th>
        </tr>
        <% posts.forEach(post => { %>
        <tr>
          <div class="post">
            <td>
              <a
                href="/s/<%=
                subs.find(f => f.subforum_id === post.link_to_subforum)?.name;
                %>/viewPost/<%= post.post_id %>"
                ><%= post.post_id %></a
              >
            </td>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.posted_date %></td>
          </div>
        </tr>
        <% }) %>
      </table>
    </div>

    <div class="subs">
      <h2>Subs</h2>
      <% subs.forEach(sub => { %>
      <div class="sub">
        <p><%= sub.subforum_id %> <%= sub.name %></p>
      </div>
      <% }) %>
    </div>
  </body>
</html>
